doctype html
html
  head(lang="en")
    meta(charset="UTF-8")
    title Creating an Npm-driven Website
    link(href="../node_modules/bootswatch/dist/flatly/bootstrap.min.css", type="text/css", rel="stylesheet")
    link(href="../public/stylesheets/styles.css", type="text/css", rel="stylesheet")
  body
    .container
      h1 Your Google Maps Locations
      form.form-horizontal(id="geocoding_form")
        .form-group
          .col-xs-12.col-md-6.col-md-offset-3
            .input-group
              input#address.form-control(type="text", placeholder="Enter your location...")
              span.input-group-btn
                span.glyphicon.glyphicon-search(aria-hidden="true")
      .map-overlay
        p Loading...
        #map
      .col-xs-12.col-md-6.col-md-offset-3.save-container
        h4#save-location
        span.glyphicon.glyphicon-star-empty(aria-hidden="true")
      .list-group.col-xs-12.col-md-6.col-md-offset-3
        span.list-group-item.active Saved Locations
    // The jQuery library
    script(src="../node_modules/jquery/dist/jquery.min.js")
    // The Moment.js library
    script(src="../node_modules/moment/moment.js")
    // Including the Google Maps API and the GMaps library
    script(src="http://maps.google.com/maps/api/js?sensor=true")
    script(src="../node_modules/gmaps/gmaps.js")
    // Including our own JavaScript file
    script(src="../public/javascripts/scripts.js")
